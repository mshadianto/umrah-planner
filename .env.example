# =============================================================================
# LABBAIK AI v6.0 - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
LABBAIK_ENV=development
# Options: development, staging, production, testing

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/labbaik
# For Neon: postgresql://user:password@host.neon.tech/neondb?sslmode=require

# -----------------------------------------------------------------------------
# AI SERVICES
# -----------------------------------------------------------------------------
# Groq (Primary)
GROQ_API_KEY=your_groq_api_key_here
# Get your key at: https://console.groq.com/

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
# Get your key at: https://platform.openai.com/

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
# Session (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET_KEY=your_session_secret_key_at_least_32_characters_long

# JWT (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# -----------------------------------------------------------------------------
# REDIS (Optional)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# EMAIL (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@labbaik.cloud

# -----------------------------------------------------------------------------
# MONITORING (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# -----------------------------------------------------------------------------
ENABLE_GAMIFICATION=true
ENABLE_BOOKING=true
ENABLE_ANALYTICS=false
